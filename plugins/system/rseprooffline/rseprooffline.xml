<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>RSEvents!Pro Offline payment</name>
	<author>RSJoomla!</author>
	<creationDate>20.02.2012</creationDate>
	<copyright>Copyright (C) 2008-2012 RSjoomla.com. All rights reserved.</copyright>
	<license>GPLv2.0</license>
	<authorEmail>support@rsjoomla.com</authorEmail>
	<authorUrl>www.rsjoomla.com</authorUrl>
	<version>1.2</version>
	<description>RSEvents!Pro offline plugin. &lt;font color="red"&gt;Make sure you publish the plugin&lt;/font&gt;</description>
	
	<updateservers>
        <server type="extension" priority="1" name="RSEvents! Pro - Offline Payment Plugin">https://www.rsjoomla.com/updates/com_rseventspro/Plugins/plg_rseprooffline.xml</server>
    </updateservers>
	
	<files>
		<filename plugin="rseprooffline">rseprooffline.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages>
		<language tag="en-GB">en-GB.plg_system_rseprooffline.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="use_ssl" type="radio" class="btn-group" default="0" label="COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_USE_SSL" description="COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_USE_SSL_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="tax_type" type="radio" class="btn-group" default="0" label="COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_TAX_TYPE" description="COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_TAX_TYPE_DESC">
					<option value="0">COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_TAX_FIXED</option>
					<option value="1">COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_TAX_PERCENT</option>
				</field>
				<field type="text" name="tax_value" default="0" value="" cols="55" rows="10" label="COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_TAX_VALUE" description="COM_RSEVENTSPRO_PLG_PLUGIN_OFFLINE_TAX_VALUE_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>